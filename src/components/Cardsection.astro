---
import content from "../Data/siteContent.json";
const { cardSection } = content;
import "../style/scrollcard/scrollCards.css";
---

<main class="">
  <section class="overflow-hidden">
    <div class="mb-20 px-[32px]">
      <h1 class="text-4xl font-bold md:text-5xl leading-[50px] md:leading-[60px] dark:text-secondary-white-500 text-center">
        See what you can do with Wraft
      </h1>
      <p class="text:lg md:text-xl text-[#475467] text-center font-light">
        Case studies from some of our amazing customers who are hiring faster.
      </p>
    </div>
    <div class="snap-align-none overflow-x-auto no-scrollbar scrollable-container mb-32 scroll-pl-[calc((100%-340px)/2)] scroll-pr-[calc((100%-340px)/2)_!important] md:scroll-pr-[1.25rem_!important] md:scroll-pr-[0rem_important]">
      <div class="pb-[20px] scrollable-content ml-[32px] md:ml-0 md:pl-[calc((100%-1140px)/2)_!important]">
        <!-- Card mapping section -->
        <!-- <div class="block sm:hidden w-[10px]"></div> -->
        {
          cardSection.map((card) => (
            // <div>
            <div class=" bg-primary-green-900 dark:bg-primary-green-400 rounded-2xl p-6 w-[340px] md:w-[384px] h-[504px] shadow-md snap-start flex flex-col">
              <div class="h-auto rounded overflow-hidden">
                <div class="bg-primary-green-200 p-4 dark:bg-primary-green-1050 h-[250px] w-[full] rounded overflow-hidden flex items-center justify-center">
                  <span class="text-secondary-white-100 font-semibold"></span>
                </div>
              </div>
              <div class="p-4 h-[250px]">
              <h3 class="font-bold text-xl mb-4 text-secondary-black-50 dark:text-secondary-white-500">
                {card.title}
              </h3>
              <p class="text-secondary-black-50 font-light dark:text-secondary-white-500 text-base mb-4">
                {card.description}
              </p>
              </div>
            </div>
          // </div>
          ))
        }
        <!-- <div class="block sm:hidden w-[18px]"></div> -->
      </div>
    </div>
  </section>
  
  
  <!-- Second card section -->
  <section class="text-center  ">
    <div class="mb-20 px-[32px]">
      <p class="text-base dark:text-secondary-white-500 font-light">More about wraft</p>
      <h1 class="text-4xl font-bold md:text-5xl leading-[50px] md:leading-[60px] dark:text-secondary-white-500">Be on brand, every time</h1>
      <p class="text:lg md:text-xl font-light text-gray-600 dark:text-[#475467]">
        Learn how Wraft features are designed to help your team work more
        effectively.
      </p>
    </div>
  
    <!-- Scrolling Cards Section -->
    <div class="mb-32  flex justify-center max-w-[1140px] mx-auto">
      <div class="pb-[20px] flex spaces-x-[16px] w-full pr-[32px] overflow-x-auto  [&::-webkit-scrollbar]:hidden [-ms-overflow-style:none] [scrollbar-width:none]">
        <!-- Card 1 -->
        <div class="ml-[32px] flex-shrink-0 w-[240px] h-[338px] p-6 bg-secondary-gray-700  shadow-lg rounded-lg text-start flex flex-col">
          <div class="h-[120px]"></div>
          <h2 class="text-xl font-bold mb-2">Branded Pages</h2>
          <p class="text-base font-light text-gray-600">
            Bring your brand assets, Letterpads to your corporate fonts. No colour
            spared.
          </p>
        </div>
    
        <!-- Card 2 -->
        <div class="flex-shrink-0 w-[240px] ml-[32px] h-[338px] p-6 pb-14 bg-secondary-gray-700 shadow-lg rounded-lg text-start flex flex-col">
          <div class="h-[120px]"></div>
          <h2 class="text-xl font-bold mb-2">Shared Templates</h2>
          <p class="text-base font-light text-gray-600">
            Maintain your tone with templates, render conditionally. Every
            department shines.
          </p>
        </div>
    
        <!-- Card 3 -->
        <div class="flex-shrink-0 w-[240px] ml-[32px] h-[338px] p-6 pb-10 bg-secondary-gray-700 shadow-lg rounded-lg text-start flex flex-col">
          <div class="h-[120px]"></div>
          <h2 class="text-xl font-bold mb-2">Use Conditions</h2>
          <p class="text-base font-light text-gray-600">
            Not all documents are same. Use custom logic to change templates, or
            toggle sections to sign your best clients.
          </p>
        </div>
    
        <!-- Card 4 -->
        <div class="flex-shrink-0 w-[240px] ml-[32px] mr-[s32px] h-[338px] p-6 pb-10 bg-secondary-gray-700 shadow-lg rounded-lg text-start flex flex-col">
          <div class="h-[120px]"></div>
          <h2 class="text-xl font-bold mb-2">Emails</h2>
          <p class="text-base font-light text-gray-600">
            Email as attachments. Integrate your favourite provider, use in built
            templates, or create custom.
          </p>
        </div>
        <div class="w-[32px]"> </div>

      </div>
    </div>
  </section>
  
  <!-- banner Section at the Bottom -->
  <section>  
    <div class=" masx-w-[1140px] w-[full] mx-[16px] min-[1150px]:mx-[calc((100%-1140px)/2)] mx-auto mb-20 rounded-xl py-16 px-2 md:p-16 min-w-[0] text-center bg-primary-green-900 dark:bg-[#0e2d22]  h-auto">
      <div class="mx-auto">
        <h2 class="font-bold text:lg md:text-xl text-secondary-black-50 dark:text-secondary-white-500">
          Documents for ambitious companies
        </h2>
        <p class="text-lg md:text-xl font-light leading-[1.5] text-secondary-black-50 mb-4 dark:text-secondary-white-500">
          Self-host or use our cloud platform (soon)
        </p>
        <div class="flex justify-center space-x-4 mt-4">
          <button
            class="text-lg text-secondary-white-500 py-3 px-4 rounded-xl font-bold bg-primary-green-800 dark:text-primary-blue-100 border-primary-green-600 hover:bg-primary-green-600 transition-colors duration-150 ease-in-out"
            >Sign up</button
          >
          <button
            class="text-lg text-primary-green-700 dark:text-primary-green-200 dark:bg-secondary-black-50   bg-secondary-white-300 hover:bg-secondary-white-300  dark:hover:bg-primary-green-400 hover:border-primary-green-300 hover:text-primary-green-200 py-3 px-4 rounded-xl font-bold border border-primary-green-600 transition-colors duration-150 ease-in-out"
            >Demo</button
          >
        </div>
      </div>
    </div>
  </section>
</main>